tmp_file=tmp.tmp
!ifndef log_file
log_file=testasm.log
!endif

.nocheck
.before
    @%create $(tmp_file)
    @set CHK_CHECK=-@diff -i -b $(name).out $(name).chk
    @set ESM_CHECK1=-@wdis -l=$(name).dis -a $(name).obj
    @set ESM_CHECK2=-@diff -i -b $(name).dis $(name).esm
    @set EMP_CHECK1=-@dmpobj -q -l -rec=FIXUPP $(name).obj
    @set EMP_CHECK2=-@diff -i -b $(name).lst $(name).emp

all: $(name).out $(name).chk $(name).obj $(name).esm $(name).emp .symbolic
    @%append $(log_file) $(name) ================================================================
    @SET TESTASM=Test OK
    $(%CHK_CHECK) >>$(log_file)
    @if errorlevel 1 @SET TESTASM=!!! Test unsuccessful !!!
    $(%ESM_CHECK1)
    $(%ESM_CHECK2) >>$(log_file)
    @if errorlevel 1 @SET TESTASM=!!! Test unsuccessful !!!
    $(%EMP_CHECK1)
    $(%EMP_CHECK2) >>$(log_file)
    @if errorlevel 1 @SET TESTASM=!!! Test unsuccessful !!!
    @%append $(log_file) $(%TESTASM)
    @echo $(%TESTASM)

$(name).out: .existsonly
    @%create $(name).out

$(name).chk: .existsonly
    @set CHK_CHECK=-@diff -i -b $(name).out $(tmp_file)

$(name).obj: .existsonly
    @set ESM_CHECK1=@%null
    @set ESM_CHECK2=@%null
    @set EMP_CHECK1=@%null
    @set EMP_CHECK2=@%null

$(name).esm: .existsonly
#    @set ESM_CHECK1=@%null
    @set ESM_CHECK2=@%null

$(name).emp: .existsonly
#    @set EMP_CHECK1=@%null
    @set EMP_CHECK2=@%null
