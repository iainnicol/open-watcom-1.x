LIBDIRS = $(WCLIB_DIR)/$(OBJDIR)

LIBS = -lwatcom

CFLAGS += -D__ISVI__

$(OBJDIR)/wvi	: $(OBJDIR) $(OBJECTS)
	echo lpth $(LIBDIRS)	
	$(CC) -o $@ $(CFLAGS) -L$(LIBDIRS) $(OBJECTS) $(LIBS) 

$(OBJDIR) :
	mkdir $(OBJDIR)

.PHONY	: clean
clean	:
	rm -rf $(OBJDIR)
