proj_name = f77

!include cproj.mif
!include deftarg.mif
!include defrule.mif

!include wres.mif

inc_dirs=-I"../h" -I"$(f77_dir)/cg86/cp/h" -I"$(f77_dir)/cg86/h" -I"$(f77_dir)/h"

extra_c_flags = -d__WFL__ -d__RT__
extra_c_flags_i86 = -fpc
extra_c_flags_386 = -fpc

.c: ../c;$(f77_dir)/cg86/cp/c;$(f77_dir)/cp;$(f77_dir)/c

files = &
    blderr.obj &
    errgrp.obj &
    errutil.obj &
    errrsrc.obj &
    errrtns.obj &
    showopts.obj &
    wfl.obj

exename_i86 = wfl
exename_386 = wfl386
exename_axp = wflaxp
target_exe  = $(exename_$(target_CPU))

$(target_exe).exe : $(files) $(wres_lib) errmsg.res
    $(linker) $(lflags) name $^@ file { $(files) } lib $(wres_lib)
    wstrip -q -a -r $^@ . errmsg.res

errmsg.res : ../c/errmsg.rc ../h/errmsgi.rc ../h/errmsg3.rc ../h/errcod.h ../h/errcodi.h ../h/errcod3.h
    $(rc_aui) -I"$(f77_dir)/cg86/h" -I"$(f77_dir)/h" $[@ -fo=$^@
