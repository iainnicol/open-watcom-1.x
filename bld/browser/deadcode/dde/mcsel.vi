expr %a = %4 - %3 + 2
expr %b = %4+1
expr %c = %2+1

if %(OS) == "win" || %(OS) == "winnt"
    assign %d = 0
else
    assign %d = 1
endif

menu float0
menuitem "&Open" edit %1
menuitem "&Browse" so browse.vi %1
menuitem ""
menuitem "&Change" execute "%dcr
menuitem "&Delete" execute "%ddr
menuitem "&Yank" execute "%dyr
menuitem ""
menuitem "&Fgrep" fgrep "%1"
menuitem "&Tag" tag %1
endmenu

floatmenu 0 %a %b %c
