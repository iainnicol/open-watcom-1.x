HOME__DIR       =$+ $(%cwd) $-

$(plusplus_dir)\bin\rpp$(host_CPU)12.exe:
!ifdef __MSDOS__
           cd $(plusplus_dir)\dos$(host_CPU)
!else ifdef __OS2__
           cd $(plusplus_dir)\os2$(host_CPU)
!else ifdef __NT386__
           cd $(plusplus_dir)\nt$(host_CPU)
!else ifdef __NTAXP__
           cd $(plusplus_dir)\nt$(host_CPU).axp
!endif
           wmake /h /k reference
           cd $(HOME__DIR)

