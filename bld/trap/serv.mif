#
# Master makefile for creating remote servers
#

!ifdef __LINUX__
description = \'Open Watcom Debug Server\'
!else
description = 'Open Watcom Debug Server'
!endif

sys_x86_os2     = sys os2 op st=4k,modname=$^&, desc $^&
sys_x86_os2v2   = sys os2v2 op modname=$^&, desc $^&
sys_x86_qnx     = sys qnx386 flat op st=16k, offset=20k, res=$(srv).use
sys_x86_linux   = sys linux
sys_x86_win     = sys windows op st=20k, modname=$^&, desc $^&
sys_x86_dos     = sys dos op st=4k
sys_x86_rsi     = stub
sys_x86_cw      = sys causeway
sys_x86_ads     = sys ads op st=8k lib $(adsdir)/wcads.lib
!ifndef sys_x86_pls
sys_x86_pls     = sys pharlap op st=8k
!endif
!ifeq srv jvm
sys_x86_nt      = sys nt dll op modname=$^&, desc $^&
!else
!ifeq srv msj
sys_x86_nt      = sys nt dll op modname=$^&, desc $^&
!else
!ifdef test
sys_x86_nt      = sys nt op st=20k, modname=$^&, desc $^&
!else
sys_x86_nt      = sys nt_win op st=20k, modname=$^&, desc $^&
!endif
!endif
!endif

#
#   NW 4 and 3 are CLIB, 5 and later is LIBC
#   it looks for math3s.lib but doesn't need it. should I remove deflib info?
#
!ifeq nwlib libc
sys_x86_nlm     = form novell nlm $(description) &
                        libpath $(lang_root)/lib386 &
                        op st=8k &
                        import @$(trap_dir)/common/nlm/traplibc.imp &
                        op nodef &
                        op pseudopreemption &
                        op start = _PreludeHook &
                        op exit = _LibCPostlude &
                        op screenname 'none' &
                        @./nversion.tmp &
                        file $(%NOVELLNDK)/../libc/imports/libcpre.obj
!else
sys_x86_nlm     = form novell nlm $(description) &
                        libpath $(lang_root)/lib386 &
                        op st=8k &
                        @./nversion.tmp &
                        import @$(trap_dir)/common/nlm/trap.imp &
                        op nodef
!endif
sys_x86_penpoint= sys penpoint op st=8k, modname=$^&, desc $^&

sys_axp_nt      = sys ntaxp op st=16k, modname=$^&, desc $^&

sys_ppc_nt      = sys ntppc op st=16k, modname=$^&, desc $^&

targ_x86_os2    = $(name)1.exe
targ_x86_os2v2  = $(name).exe
targ_x86_qnx    = $(name).qnx
targ_x86_linux  = $(name).elf
targ_x86_win    = $(name).exe
targ_x86_dos    = $(name).exe
targ_x86_rsi    = $(name).exp
targ_x86_cw     = $(name).exe
targ_x86_ads    = $(name).exp
!ifndef targ_pls
targ_x86_pls    = $(name).exp
!endif
!ifeq srv jvm
targ_x86_nt     = jvmhlp_g.dll
!endif
!ifeq srv msj
targ_x86_nt     = msjhlp.dll
!else
targ_x86_nt     = $(name).exe
!endif
targ_x86_nlm    = $(name).nlm

targ_axp_nt     = $(name).exe

targ_ppc_nt     = $(name).exe

!ifeq nwlib libc
objs_nlm        = libcstrt.obj
!else
objs_nlm        = nlmstrt.obj
!endif

dig_os = $(os)
!include $(dig_dir)/mif/trpcli.mif

SERVER_objs = $(objs_$(os))

!ifdef test
SERVER_remote_objs = testserv.obj servname.obj
!else
!ifdef gui
SERVER_remote_objs = wserver.obj options.obj
resource_file = wserver.res
!else
SERVER_remote_objs += serv.obj $(os)trio.obj
!endif
SERVER_remote_objs += servacc.obj servcmd.obj servname.obj $(trap_objs)
extra_srcs +=;$(dig_srcs)
!endif
