all : $($(proj_name)_$(what_to_build)) .SYMBOLIC
    @%null

.mh: $(include_dir)

.def: $(lib_dir)

.c: $(lib_dir)

.mh.h:
    $(splice)

.mh.rh:
    $(rsplice)

.def.lbc:
    $(vi) -s $(root_dir)/def2lbc.vi -p"$[@ $* $(host_cpu)"

.lbc.lib:
    $(librarian) $(libflags) $@ @$<

winsock2.h: winsock.mh
    $(ws2splice)

largeint.lib: largeint.obj
    %create $^&.lbc
    @%append $^&.lbc +largeint.obj
    $(librarian) $(libflags) $@ @$^&.lbc

strmiids.lib: strmiids.obj
    %create $^&.lbc
    @%append $^&.lbc +strmiids.obj
    $(librarian) $(libflags) $@ @$^&.lbc

strquery.lib: strquery.obj
    %create $^&.lbc
    @%append $^&.lbc +strquery.obj
