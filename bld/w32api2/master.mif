uuid.lib: uuid.obj
    %create $^&.lbc
    @%append $^&.lbc +uuid.obj
    $(librarian) $(libflags) $@ @$^&.lbc

wbemuuid.lib: wbemuuid.obj
    %create $^&.lbc
    @%append $^&.lbc +wbemuuid.obj
    $(librarian) $(libflags) $@ @$^&.lbc

dxguid.lib: dxguid.obj
    %create $^&.lbc
    @%append $^&.lbc +dxguid.obj
    $(librarian) $(libflags) $@ @$^&.lbc

vfw32.lbc: $(vfw32_lbcs) vfwuuid.obj
    @%create $@
    @for %i in ($(vfw32_lbcs)) do @%append $@ @ %i
    @%append $@ +vfwuuid.obj
