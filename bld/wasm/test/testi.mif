.CONTINUE
.IGNORE

!ifndef testcomp
testcomp=wcc386
!endif 

!ifdef __UNIX__
nulldevice=/dev/null
!else
nulldevice=nul
!endif

log_file=testcomp.log

.BEFORE
    @%create $(log_file)

all : clean $(objs) $(dev_objs) .SYMBOLIC

!ifneq objs
$(objs) : .SYMBOLIC
    @echo $^@ ================================================================
    @$(testcomp) $@.c -s -os -zq -fo=.obj $(c_flags_$^@) >$(nulldevice)
    @wmake -h -f ../check.mif name=$@ log_file=$(log_file) fix_wdis_lst=1
!endif

!ifneq dev_objs
$(dev_objs) : .SYMBOLIC
    @echo .
    @echo ==============================================================
    @echo DEVELOPMENT - $^@.asm 
    @echo ==============================================================
    @$(testcomp) $@.c -s -os -zq -fo=.obj $(c_flags_$^@) >$(nulldevice)
    @wmake -h -f ../check.mif name=$@ log_file=$(log_file) fix_wdis_lst=1
    @echo .
!endif

clean : .SYMBOLIC
    @rm -f *.obj *.err *.dis *.lst *.tmp mem.trk
