.CONTINUE
.IGNORE

!ifndef testcomp
testcomp=wcc386
!endif 

!ifdef nulldevice
!else ifdef __UNIX__
nulldevice=/dev/null
!else
nulldevice=nul
!endif

!ifndef log_file
log_file=testcomp.log
!endif

.BEFORE
#    @%create $(log_file)

all : clean $(objs) .SYMBOLIC

!ifneq objs
$(objs) : .SYMBOLIC
    @echo ==============================================================
    @echo $(testcomp) $^@.asm 
    @echo ==============================================================
    @%append $(log_file) === $(testcomp) $^@ ===
    @$(testcomp) $@.c -s -os -zq -fo=.obj $(c_flags_$^@) >$(nulldevice)
    @wmake -h -f ../check.mif name=$@ log_file=$(log_file) fix_wdis_lst=1
!endif

clean : .SYMBOLIC
    @rm -f *.obj *.err *.out *.dis *.lst *.tmp mem.trk *.log
