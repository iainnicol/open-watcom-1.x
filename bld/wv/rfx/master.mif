#
# Open Watcom Debugger makefile (RFX)
#

proj_name = rfx

dig_os = $(host_os)
!ifeq host_cpu 386
!ifeq host_os os2
dig_os = os2v2
!endif
!endif

!include cproj.mif
!include deftarg.mif
!include defrule.mif

!include $(dig_dir)/mif/trpcli.mif

inc_dirs = ..;$(wv_dir)/h;$(dig_dir)/h;$(wv_dir)/$(host_os)/$(host_os)$(host_cpu)

extra_c_flags = -s -dBUILD_RFX
!ifeq machine fmr
extra_c_flags += -d_FMR_PC
!else ifeq machine nec
extra_c_flags += -d_NEC_PC
!endif

extra_l_flags = op map

objs = rfx.obj        &
       rfxacc.obj     &
       stubs.obj      &
       remmisc.obj    &
       remfile.obj    &
       remenv.obj     &
       doserr.obj     &
       dbgfile.obj    &
       local$(host_os).obj &
       $(trap_objs)

!ifeq dig_os os2v2
objs += $(host_os)2flio.obj &
!else
objs += $(host_os)filio.obj &
!endif

!ifeq host_os dos
objs += inthdlrs.obj
!endif

rfx.exe : $(objs)
        $(linker) $(lflags) name $^. file { $< }

.c: ../$(host_os)$(host_cpu);..;$(wv_dir)/$(host_os)/c;$(wv_dir)/c;$(dig_srcs)

.asm: ../$(host_os)i86
