womp : womp.$(exe) wompj.$(exe) .symbolic
    @%null

!ifdef on_build_machine
all.osz :
!ifeq form_exe pharlap
    wlink NAME womp @womp.lnk lib wresf
!else
    wlink NAME womp @womp.lnk lib wresl
!endif
    objsize @map womp.map >all.osz
    objpad all.osz
!endif

womp.$(exe) wompj.$(exe) : womp.res wompj.res womp.lnk $(objs)
!ifdef on_build_machine
    @%make all.osz
    objsetsz all.osz
!endif
!ifeq form_exe pharlap
    wlink NAME womp @womp.lnk lib wresf
!else
    wlink NAME womp @womp.lnk lib wresl
!endif
!ifeq form_exe os2
    $(binder)\bind.exe womp.exe $(doscalls) $(apilib)
!endif
    copy womp.$(exe) wompj.$(exe)
    wstrip /a /r /q womp.$(exe) . womp.res
    wstrip /a /r /q wompj.$(exe) . wompj.res
!ifdef jims_machine
!ifeq form_exe pharlap
    copy/b $(pharlap)stub386.exe+womp.exp $(%devdir)\bin\wompd.exe
    cfig386 $(%devdir)\bin\wompd.exe -win30grow -win30limit +524228
    copy/b $(pharlap)stub386.exe+wompj.exp $(%devdir)\bin\wompdj.exe
    cfig386 $(%devdir)\bin\wompdj.exe -win30grow -win30limit +524228
!endif
!endif
#
# We may have to copy ..\h\wmpmsg.h up to the root.
# Depends on where WASM and WATFOR expect it....
#    copy msg.h ..

womp.lnk : objfiles.mif master.mif
    %create $^@
!ifeq form_exe os2
!ifdef tools_8_0
    @%append $^@ FORM $(form_exe) pmc option heap=8k,newfiles
!else
    @%append $^@ SYSTEM $(form_exe) pmc option heap=8k,newfiles
!endif
!else
!ifdef tools_8_0
    @%append $^@ FORM $(form_exe)
!else
    @%append $^@ SYSTEM $(form_exe)
!endif
!endif
!ifndef on_build_machine
    @%append $^@ DEBUG all
!endif
!ifeq form_exe pharlap
    @%append $^@ OPTION offset=64k
!endif
    @%append $^@ OPTION quiet,map,stack=16k
    @for %i in ($(objs)) do @%append $^@ FILE %i
!ifndef release
!ifeq form_exe pharlap
    @%append $^@ file $(%devdir)\stkdepth\stkd386.lib
!else
    @%append $^@ file $(%devdir)\stkdepth\stkdl.lib
!endif
!endif

womp.res : ..\h\womp.rc ..\womp.msg usage.rc wpmsg.h ..\h\wmpmsg.h
    $(wrce) /r /q /dENGLISH /fo=$^@ $[@

wompj.res : ..\h\womp.rc ..\womp.msg usagej.rc wpmsg.h ..\h\wmpmsg.h
    $(wrck) /r /q /dJAPANESE /fo=$^@ $[@

usage.rc : ..\usage.sp
    wsplice -kIS_RC -kENGLISH -t8 -f "%+(MSG_USE_BASE+%$#-1), \"%s\""..\usage.sp usage.rc

usagej.rc : ..\usage.sp
    wsplice -kIS_RC -kJAPANESE -t8 -f "%+(MSG_USE_BASE+%$#-1), \"%s\""..\usage.sp usagej.rc

