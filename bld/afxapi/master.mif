extra_lib_flags_386 = -io -ii

additional_cleanup = *.h *.inl *.def

all : $($(what_to_build)) .SYMBOLIC
    @%null

.mh: $(include_dir)
.mnl: $(include_dir)
.mrc: $(include_dir)

.cpp: $(lib_dir)

.mh.h:
    $(splice)

.mnl.inl:
    $(splice)

.mrc.rc:
    $(splice)

afx.h: afx.mh
    wsplice -i$(hdr_dir) $[@ tmp.h
    awk -f ../dobldver.awk -v bld_ver=$(bld_ver) tmp.h > afx.h
    @rm tmp.h

$(libname).lib: $(objs) $(static_objs)
    $(librarian) $(libflags) $<

$(intname).lib: $(objs)
    $(librarian) -z=tmp.def $(libflags) $<
    $(sed) -f $(lib_misc_dir)/sed/export.sed tmp.def > tmp2.def
    sort < tmp2.def > tmp3.def
    uniq tmp3.def > export.def
    @rm tmp.def
    @rm tmp2.def
    @rm tmp3.def

# systems where version resource must be added to .DLL
version_res_nt_386 = version.res

$(dllname).dll: $(intname).lib $(dllname).lnk owf.res $(version_res_$(host_os)_$(host_cpu))
    $(linker) name $(dllname).dll @$(dllname).lnk
!ifdef version_res_$(host_os)_$(host_cpu)
    $(rc) -k owf.res $^@ -fr=$(version_res_$(host_os)_$(host_cpu))
!else
    $(rc) -k owf.res $^@
!endif

$(dllname).lib: $(dllname).dll
    $(librarian) $(libflags) +$(dllname).dll

$(dllname).lnk: $(__MAKEFILES__)
    %create $@
    @%append $@ $(lflags_dll)
    @%append $@ op map
    @%append $@ file $(intname).lib
    @%append $@ export @export.def

$(statname).lib: $(static_objs)
    $(librarian) $(libflags) $<

owf.res: ../lib/owf.rc .AUTODEPEND
    $(rc) $(rc_flags) -ad -zk0 $(inc_path) -I../include $[@ -fo=$^@

./genverrc.exe: $(dev_dir)/builder/c/genverrc.c
    $(bld_cl) $[@ $(wcl_util_opts) -D_VERSION=$(bld_ver)

!ifndef patch_level
patch_level = 0
!endif

version.res: ./genverrc.exe ../version.rc $(dev_dir)/builder/c/genverrc.c
    $[@ ../version.rc version.rc $$ $(dllname) $(patch_level)
    $(rc) $(rc_flags) $(inc_path) version.rc -fo=$^@
