# define compilers
comp286=*wcc
#
# use these to override compilers if necessary
#
!ifdef %BWCC
comp286 += @BWCC
!endif

!ifdef msc
comp386=$(msvc_dir)\bin\cl
!else
comp386=*wcc386
!ifdef %BWCC386
comp386 += @BWCC386
!endif
!endif

compaxp = $(nlang_root)\binnt\wccaxp
!ifdef %BWCCAXP
compaxp += @BWCCAXP
!endif

#
# compilers used for libraries
#
libcomp286=$(comp286) -r -fpr

!ifdef msc
libcomp386=$(comp386)
!else
libcomp386=$(comp386) -r -fpr
!endif

libcompaxp=$(compaxp)

#
# compilers used for install
#
